# Application
NODE_ENV=production
PORT=5000
BASE_URL=https://jobai.co.za
FRONTEND_URL=https://app.jobai.co.za

# Database
MONGODB_URI=mongodb://localhost:27017/jobai
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=your_secure_password
MONGO_USER=jobai_user
MONGO_PASSWORD=your_mongo_password

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# JWT Authentication
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=7d

# Payment Gateway - PayFast
PAYFAST_MERCHANT_ID=your_merchant_id
PAYFAST_MERCHANT_KEY=your_merchant_key
PAYFAST_PASSPHRASE=your_passphrase
PAYFAST_ENV=production

# AI Services
OPENAI_API_KEY=your_openai_api_key
GEMINI_API_KEY=your_gemini_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key

# WhatsApp Integration
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_WHATSAPP_NUMBER=+14155238886
WHATSAPP_PHONE_NUMBER_ID=your_whatsapp_phone_number_id
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token
VONAGE_API_KEY=your_vonage_api_key
VONAGE_API_SECRET=your_vonage_api_secret
VONAGE_BRAND_NAME=JobAI

# Email Service
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=noreply@jobai.co.za

# File Storage
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=af-south-1
AWS_BUCKET_NAME=jobai-sa-documents
CLOUDFLARE_API_TOKEN=your_cloudflare_token

# Analytics
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
MIXPANEL_TOKEN=your_mixpanel_token
HOTJAR_ID=your_hotjar_id

# Security
CORS_ORIGIN=https://app.jobai.co.za
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
HELMET_HSTS_ENABLED=true
HELMET_HSTS_MAX_AGE=31536000

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_ADMIN_PASSWORD=your_grafana_password
FLOWER_USER=admin
FLOWER_PASSWORD=your_flower_password

# Job Scraping
JOB_SCRAPER_MAX_CONCURRENT=5
JOB_SCRAPER_DELAY_MIN=5
JOB_SCRAPER_DELAY_MAX=15
JOB_SCRAPER_USER_AGENT_ROTATION=true

# Application Limits
MAX_DAILY_APPLICATIONS=10
MAX_CV_SIZE_MB=50
MAX_PHOTO_SIZE_MB=10
MAX_QUALIFICATIONS=10

# Business
APPLICATION_FEE_ZAR=500
REFERRAL_COMMISSION_PERCENT=10
EMPLOYMENT_BONUS_ZAR=1000
